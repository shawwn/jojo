#!/usr/bin/env bash

# c="g++"
c="clang++"

prefix=$HOME

tangle () {
    ./tangle.js
}

build ()
{
    tangle
    f="-Wall -Wno-infinite-recursion"
    time $c $f jojo.cpp -o jojo
}

release () {
    tangle
    f="-Wall -Wno-infinite-recursion -foptimize-sibling-calls -O2"
    time $c $f jojo.cpp -o jojo
}

clean () {
    rm -f jojo
}

test () {
    tangle
    clean
    build
    time ./jojo

    for file in $(ls test | grep "\.jo")
    do
        ./jojo "test/$file"
    done
}

debug () {
    tangle
    clean
    build
    time valgrind ./jojo
    # time valgrind --leak-check=full ./jojo
}

install () {
    cp jojo $prefix/bin/
}


uninstall () {
    rm $prefix/bin/jojo
}

main () {
    for fun in $@
    do
        $fun
    done
}

main $@
